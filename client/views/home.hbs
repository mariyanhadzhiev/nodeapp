<div class="home-page container">
    <div class="row mt-5">
        <div class="col-12 offset-md-1 offset-lg-2 offset-xl-3 col-md-10 col-lg-8 col-xl-6">
            <form class="container-fluid" action="/login" method="post">
                <caption>You need to login first.</caption>
                <div class="row mt-3 bg-secondary p-3">
                    <div class="col">
                        <input class="form-control" type="text" name="username" placeholder="Username">
                    </div>
                    <div class="col">
                        <input class="form-control" type="password" name="password" placeholder="Password">
                    </div>
                    <div class="col-12 mt-3">
                        <input class="form-control" type="submit" value="Login">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>